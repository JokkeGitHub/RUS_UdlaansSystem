<Page x:Class="UdlaansSystem.Export"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UdlaansSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Export">

    <Page.Resources>

        <ContextMenu x:Key="cmCalendar">
            <MenuItem Header="Vælg dato">
                <!--<MenuItem.Icon >
                    <Image Source="resources/calendar.png"/>
                </MenuItem.Icon>-->
                <Calendar></Calendar>
            </MenuItem>
        </ContextMenu>

    </Page.Resources>
    
    
    <Grid>

        <!-- 15 COLUMNS-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- 20 ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- INPUT TEXTBOXES -->
        <TextBox x:Name="UniLoginInput" TextAlignment="Center" FontSize="50" Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="4">UniLogin</TextBox>
        <TextBox x:Name="NameInput" TextAlignment="Center" FontSize="50" Grid.Row="7" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="12">Navn</TextBox>
        <TextBox x:Name="PhonenumberInput" TextAlignment="Center" FontSize="50" Grid.Row="10" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="12">Telefonnummer</TextBox>
        <TextBox x:Name="DateInput" TextAlignment="Center" FontSize="32" MouseRightButtonDown="DateInput_MouseRightButtonDown" Grid.Row="3" Grid.Column="10" Grid.RowSpan="2" Grid.ColumnSpan="4">Vælg dato</TextBox>
        
        <!-- QR CODE TEXTBOXES -->
        <TextBox x:Name="QRScannerSerialNumber" TextAlignment="Center" FontSize="50" Grid.Row="13" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="12" KeyDown="QRScannerSerialNumber_KeyDown"></TextBox>

        <!-- OUTPUT TEXTBOXES -->
        <TextBox x:Name="UniLoginStatus" TextAlignment="Center" FontSize="32" Grid.Row="1" Grid.Column="2" Grid.RowSpan="1" Grid.ColumnSpan="4" IsReadOnly="True">Har dette UniLogin lånt?</TextBox>
        <TextBox x:Name="CurrentDate" TextAlignment="Center" FontSize="32" Grid.Row="1" Grid.Column="10" Grid.RowSpan="1" Grid.ColumnSpan="4" IsReadOnly="True">Nuværende dato</TextBox>
        
        <!-- INTERACTIVE BUTTONS -->
        <Button x:Name="BtnCheckUniLogin" Content="Tjek UniLogin for lån" FontSize="32" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="4"/>
        <Button x:Name="BtnSubmit" Content="Udlån" FontSize="32" Grid.Row="17" Grid.Column="2" Grid.RowSpan="2" Grid.ColumnSpan="3"/>

        <!--<Viewbox Grid.Row="1" Grid.Column="9" Grid.RowSpan="5" Grid.ColumnSpan="3">
            <Calendar SelectionMode="SingleRange" />
        </Viewbox>-->


    </Grid>
</Page>
